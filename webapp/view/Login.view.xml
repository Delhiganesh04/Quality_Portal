<mvc:View controllerName="qualityportal.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    displayBlock="true"
    xmlns:html="http://www.w3.org/1999/xhtml">

    <Page id="page" class="loginPage" showHeader="false">
        <VBox id="_IDGenVBox1" width="100%" height="100%" justifyContent="Center" alignItems="Center">
            <Panel
                id="_IDGenPanel"
                headerText="ðŸ”§ Quality Inspection Login"
                class="qualityLoginPanel customHeaderText"
                width="400px"
                expandable="false">

                <VBox id="_IDGenVBox2" class="sapUiMediumMargin">
                    <Label id="_IDGenLabel" text="Engineer ID" class="inputLabel" />
                    <Input
                        id="username"
                        placeholder="Enter your employee ID"
                        icon="sap-icon://personnel-view"
                        showValueHelp="false"
                        class="styledInput" />

                    <Label id="_IDGenLabel1" text="Password" class="inputLabel sapUiSmallMarginTop" />
                    <Input
                        id="password"
                        placeholder="Enter secure password"
                        type="Password"
                        icon="sap-icon://locked"
                        showValueHelp="false"
                        class="styledInput" />

                    <Button id="_IDGenButton"
                        text="Login"
                        type="Emphasized"
                        width="100%"
                        press="onLogin"
                        class="qualityLoginButton sapUiMediumMarginTop" />
                </VBox>
            </Panel>
        </VBox>
    </Page>
</mvc:View>
