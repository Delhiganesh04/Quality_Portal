<mvc:View controllerName="qualityportal.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    displayBlock="true"
    xmlns:html="http://www.w3.org/1999/xhtml">

    <Page id="page" class="loginPage" showHeader="false">
    
        <VBox id="_IDGenVBox1" width="100%" height="100%" justifyContent="Center" alignItems="Center">
            <MessageStrip id="_IDGenMessageStrip" text="Login Success" type="Success" showCloseButton="true" visible="false"></MessageStrip>
             <MessageStrip id="_IDGenMessageStrip1" text="Invalid Credentials" type="Error" showCloseButton="true" visible="false"></MessageStrip>
            <!-- <Image id="_IDGenImage" src="assets/quality.png" width="150px" class="sapUiMediumMarginBottom"/> -->

            <Panel
                id="_IDGenPanel"
                headerText=" Quality Inspection"
                class="qualityLoginPanel customHeaderText"
                width="400px"
                expandable="false">
                <VBox id="aligncenter" class="alignlogo">
                <Image id="_IDGenImage" src="assets/quality.png" width="150px" class="sapUiMediumMarginBottom"/>
                </VBox>
                <VBox id="_IDGenVBox2">
                    <Label id="_IDGenLabel" text="Engineer ID" class="inputLabel" />
                    <Input
                        id="username"
                        placeholder="Enter your employee ID"
                        showValueHelp="false"
                        class="styledInput" />

                    <Label id="_IDGenLabel1" text="Password" class="inputLabel sapUiSmallMarginTop" />
                    <Input
                        id="password"
                        placeholder="Enter secure password"
                        type="Password"
                        showValueHelp="false"
                        class="styledInput" />

                    <Button id="_IDGenButton"
                        text="Login"
                        type="Emphasized"
                        width="100%"
                        press="onLogin"
                        class="qualityLoginButton sapUiMediumMarginTop" />
                </VBox>
            </Panel>
                            <Text id="_IDGenText2" text="Â© 2025 Kaar Tech" class="sapUiSmallMarginTop copyrightText"/>

        </VBox>
    </Page>
</mvc:View>
